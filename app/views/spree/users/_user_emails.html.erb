<div data-hook="account_user_emails">
  <h3><%= Spree.t(:my_emails) %></h3>
  <% if @user_emails.present? %>
    <table class="table table-striped user_emails">
      <thead class="active">
      <tr>
        <th class="user_email"><%= Spree.t(:email) %></th>
        <th class="user_email_primary text-center"><%= Spree.t(:primary) %></th>
        <% if Spree::Auth::Config[:confirmable] %>
          <th class="user_email_primary text-center"><%= Spree.t(:verified) %></th>
        <% end %>
        <th class="user_email_actions"></th>
      </tr>
      </thead>
      <tbody id="user_emails">
        <%= render @user_emails %>
      </tbody>
    </table>
  <% else %>
    <div class="alert alert-info"><%= Spree.t(:you_have_no_emails_yet) %></div>
  <% end %>
  <div>
    <%= link_to "Add new email", new_user_email_path(user_id: @user.id), remote: true, class: "btn btn-primary" %>
  </div>
  <div data-hook="user_email_form"></div>
</div>
